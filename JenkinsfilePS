pipeline {
    environment {
        registry = 'swathiguptha/student-form-image'
        registryCredential = 'swatydock'
    }
    agent any
    stages {
        stage('Buiding the student survey image') {
            steps {
                script {
                    sh 'echo ${BUILD_TIMESTAMP}'
                    docker.withRegistry('', registryCredential) {
                        def customImg = docker.build('swathiguptha/student-form-image:test')
                    }
                }
            }
        }
        stage('Pushing docker image to Docker Hub')
        {
            steps
            {
                script {
                    docker.withRegistry('', registryCredential) {
                        def image = docker.build('swathiguptha/student-form-image:test', '.')
                        docker.withRegistry('', registryCredential) {
                            image.push()
                        }
                    }
                }
            }
        }
        stage('Deploying as a pod to rancher')
        {
            steps
            {
                script{
                    sh 'kubectl set image deployment/student-form-cluster container-0=swathiguptha/student-form-image:test'
                }
            }
        }
    }
}
